<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TaiKhoanFragment">

    <ImageView
        android:id="@+id/ivAnhDaiDien"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_marginTop="56dp"
        android:elevation="10dp"
        android:src="@drawable/edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTenCaNhan"
        android:layout_width="289dp"
        android:layout_height="24dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="177dp"
        android:text="Tên cá nhân"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAnhDaiDien" />

    <TextView
        android:id="@+id/tvIdCaNhan"
        android:layout_width="289dp"
        android:layout_height="24dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="177dp"
        android:text="Id cá nhân"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTenCaNhan" />


    <TextView
        android:id="@+id/tvDonMuaHang"
        android:layout_width="375dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext"
        android:elevation="10dp"
        android:paddingLeft="40dp"
        android:paddingTop="12dp"
        android:text="Đơn Mua Hàng"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIdCaNhan" />

    <TextView
            android:id="@+id/tvChinhSuaThongTin"
            android:layout_width="375dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext"
            android:elevation="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="12dp"
            android:text="Chỉnh sửa thông tin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDonMuaHang" />

        <TextView
            android:id="@+id/tvLichSuMuaSach"
            android:layout_width="375dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext"
            android:elevation="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="12dp"
            android:text="Lịch sử mua sách"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChinhSuaThongTin" />

        <TextView
            android:id="@+id/tvCaiDat"
            android:layout_width="375dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext"
            android:elevation="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="12dp"
            android:text="Cài đặt"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLichSuMuaSach" />

        <TextView
            android:id="@+id/tvLienHe"
            android:layout_width="375dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext"
            android:elevation="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="12dp"
            android:text="Liên Hệ"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCaiDat" />

        <TextView
            android:id="@+id/tvDangXuat"
            android:layout_width="375dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext"
            android:elevation="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="12dp"
            android:text="Đăng xuat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLienHe" />

</androidx.constraintlayout.widget.ConstraintLayout>