<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="344.67dp"
    android:layout_height="160.05dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/edit_cardview"
    android:elevation="10dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="8dp"
    >

    <ImageView
        android:id="@+id/im_GioHang"
        android:layout_width="96.28dp"
        android:layout_height="135.56dp"
        android:src="@drawable/hinhtam" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTenSachGH"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Tên Sách"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40dp"
            android:layout_height="20.88dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Giá:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTenSachGH" />

        <TextView
            android:id="@+id/tvGiaSachGH"
            android:layout_width="140dp"
            android:layout_height="20.88dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="giá tiền sách"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/tvTenSachGH" />

        <ImageButton
            android:id="@+id/image_xoa"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/trash1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGiaSachGH" />

        <EditText
            android:id="@+id/edSoLuongGH"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:inputType="number"
            android:textSize="16sp"
            android:padding="0dp"
            app:layout_constraintEnd_toStartOf="@+id/btnCong"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnTru"
            app:layout_constraintTop_toBottomOf="@+id/tvGiaSachGH" />

        <ImageButton
            android:id="@+id/btnTru"
            android:layout_width="26dp"
            android:layout_height="23dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/tru"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnCong"
            android:layout_width="23dp"
            android:layout_height="24dp"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/cong"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>